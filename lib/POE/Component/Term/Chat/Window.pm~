package POE::Component::Term::Chat::Window;

use strict;
use Curses;

sub new {
    my $class = shift;
    my %opts = shift;
    my $self = bless
    {
	# base attributes
	Window  => undef,
	Height  => '',
	Width   => '',
	Palette => undef,
	Color   => undef,
	# and subclass...
	%opts,
    }, (ref($class) || $class);

    $self->init(@_);
    return $self;
}

# base level stuff?
sub init {
    my $self = shift;
    return;
}

sub PAL_PAIR   () {0}
sub PAL_NUMBER () {1}
sub PAL_DESC   () {2}

1;
